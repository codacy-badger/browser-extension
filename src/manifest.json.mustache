{
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "author": "__MSG_author__",
  "default_locale": "en",
  "homepage_url": "https://emoji-gen.ninja",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "96": "icon96.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "version": "{{version}}",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        {{#isDev}}
        "*://localhost/*",
        {{/isDev}}
        "*://emoji-gen.ninja/*"
      ],
      "css": [
      ],
      "js": [
        "content_scripts.bundle.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    }
  },
  "permissions": [
    {{#isDev}}
    "*://localhost/*",
    {{/isDev}}
    "https://emoji-gen.ninja/*",
    "https://*.slack.com/*"
  ],
  "web_accessible_resources": [
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
