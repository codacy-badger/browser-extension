{
  "name": "絵文字ジェネレーター",
  "description": "絵文字ジェネレーターを便利に利用するための拡張機能です。",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "version": "0.1.0",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "env.js",
      "background.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        {{#isDev}}
        "*://localhost/*",
        {{/isDev}}
        "*://emoji.pine.moe/*"
      ],
      "css": [
      ],
      "js": [
        "env.js",
        "content_scripts.bundle.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "permissions": [
    {{#isDev}}
    "*://localhost/*",
    {{/isDev}}
    "*://emoji.pine.moe/*",
    "https://*.slack.com/*",
    "storage"
  ],
  "web_accessible_resources": [
  ]
}
